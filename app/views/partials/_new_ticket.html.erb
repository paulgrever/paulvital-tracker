<div class="row">
    <div  class="col-md-4 col-md-offset-4" id="ticket-form">
      <%= form_for(:ticket, url: tickets_path, method: :post) do |f|  %>
        <%= f.label "Title" %>
        <%= f.text_field :title, id:"title", class: "form-control" %>
        <%= f.label "Description" %>
        <%= f.text_field :description, id:"description", class: "form-control"  %>
        <%= f.hidden_field :board_id, value: @board.id %>
        <%=  f.select :status, [["Backlog"], ["Current Sprint"], ["In Progress"], ["Done"]], class: "form-control"%>
        <%= f.submit "Add Task", class:"btn btn-danger center-block" %>
      <% end %>
    </div>
</div>
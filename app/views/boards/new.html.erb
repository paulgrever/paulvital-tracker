<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@board) do |f| %>
      <div class="input-group">
        <%= f.label "Board Title", class:"form-control" %>
        <%= f.text_field :title, class: "form-control" %>
      
        <%= f.submit "Create a New Board", class:"btn btn-danger text-center" %>
        </div>
    <% end %>
  </div>
</div>